<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFriendProfileActivity">

    <include
        android:id="@+id/addfriendsprofilebar"
        layout="@layout/appbarlayout"
        ></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/addfriendsprofilebar"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="37dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/addfriendprflepic"
                android:layout_width="150dp"
                android:layout_height="150dp"
              android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:src="@drawable/profile_img" />
            <TextView
                android:id="@+id/addfriendfullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addfriendprflepic"
                android:layout_marginTop="4dp"
                android:text="My profile name"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/addfriendusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addfriendfullname"
                android:layout_marginTop="4dp"
                android:text="My username"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/addfriendstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addfriendusername"
                android:layout_marginTop="4dp"
                android:text="My profile status"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="21sp" />
            <TextView
                android:id="@+id/addfriendlocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addfriendstatus"
                android:layout_marginTop="25dp"
                android:text="My location"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/addfrienddob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addfriendlocation"
                android:layout_marginTop="4dp"
                android:text="My DOB"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/addfriendgender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addfrienddob"
                android:layout_marginTop="4dp"
                android:text="My gender"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/addfriendrelationstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addfriendgender"
                android:layout_marginTop="4dp"
                android:text="My relationship status"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp" />
            <Button
                android:id="@+id/addfriendbtn"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addfriendrelationstatus"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="69dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="66dp"
                android:background="@drawable/buttons"
                android:text="Add friend"
                android:textColor="@android:color/holo_green_light"
                android:textSize="18sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/declinefriendbtn"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addfriendbtn"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="69dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="66dp"
                android:background="@drawable/buttons"
                android:text="Decline friend"
                android:textColor="@android:color/holo_red_light"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>